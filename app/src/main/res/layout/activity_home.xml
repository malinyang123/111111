<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ggmenu_left_alt"
                android:contentDescription="Back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="start" />

            <!-- 中间的 TextView，作为标题 -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flood Help"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <!-- 主内容部分，使用ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page1_access"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.353" />

        <ImageView
            android:id="@+id/Survival_Tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toEndOf="@+id/Alert_Notification"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.827"
            app:srcCompat="@drawable/greenbackground" />

        <ImageView
            android:id="@+id/Emergency_Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toEndOf="@+id/Flood_Sensor_Map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516"
            app:srcCompat="@drawable/redbackground" />

        <ImageView
            android:id="@+id/Alert_Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.827"
            app:srcCompat="@drawable/purplebackground" />

        <ImageView
            android:id="@+id/Flood_Sensor_Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516"
            app:srcCompat="@drawable/bluebackground" />

        <ImageView
            android:id="@+id/Whitebackground1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.479"
            app:srcCompat="@drawable/whitebackground" />

        <ImageView
            android:id="@+id/Whitebackground2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Survival_Tips"
            app:layout_constraintEnd_toEndOf="@+id/Survival_Tips"
            app:layout_constraintHorizontal_bias="0.182"
            app:layout_constraintStart_toStartOf="@+id/Survival_Tips"
            app:layout_constraintTop_toTopOf="@+id/Survival_Tips"
            app:layout_constraintVertical_bias="0.203"
            app:srcCompat="@drawable/whitebackground" />

        <ImageView
            android:id="@+id/Whitebackground3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Alert_Notification"
            app:layout_constraintEnd_toEndOf="@+id/Alert_Notification"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toStartOf="@+id/Alert_Notification"
            app:layout_constraintTop_toTopOf="@+id/Alert_Notification"
            app:layout_constraintVertical_bias="0.203"
            app:srcCompat="@drawable/whitebackground" />

        <ImageView
            android:id="@+id/Whitebackground4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Emergency_Contact"
            app:layout_constraintEnd_toEndOf="@+id/Emergency_Contact"
            app:layout_constraintHorizontal_bias="0.217"
            app:layout_constraintStart_toStartOf="@+id/Emergency_Contact"
            app:layout_constraintTop_toTopOf="@+id/Emergency_Contact"
            app:layout_constraintVertical_bias="0.154"
            app:srcCompat="@drawable/whitebackground" />

        <ImageView
            android:id="@+id/Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Whitebackground1"
            app:layout_constraintEnd_toEndOf="@+id/Whitebackground1"
            app:layout_constraintStart_toStartOf="@+id/Whitebackground1"
            app:layout_constraintTop_toTopOf="@+id/Whitebackground1"
            app:srcCompat="@drawable/map" />

        <ImageView
            android:id="@+id/Ring_Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Whitebackground4"
            app:layout_constraintEnd_toEndOf="@+id/Whitebackground4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/Whitebackground4"
            app:layout_constraintTop_toTopOf="@+id/Whitebackground4"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ring" />

        <ImageView
            android:id="@+id/Aid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Whitebackground2"
            app:layout_constraintEnd_toEndOf="@+id/Whitebackground2"
            app:layout_constraintStart_toStartOf="@+id/Whitebackground2"
            app:layout_constraintTop_toTopOf="@+id/Whitebackground2"
            app:srcCompat="@drawable/ic_baseline_health_and_safety" />

        <ImageView
            android:id="@+id/Ring_Purple"
            android:layout_width="27dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="@+id/Whitebackground3"
            app:layout_constraintEnd_toEndOf="@+id/Whitebackground3"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="@+id/Whitebackground3"
            app:layout_constraintTop_toTopOf="@+id/Whitebackground3"
            app:srcCompat="@drawable/vector" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.679"
            app:srcCompat="@drawable/group1294" />

        <ImageView
            android:id="@+id/Blue_Background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.124"
            app:srcCompat="@drawable/group27" />

        <TextView
            android:id="@+id/Emergency_Call"
            android:layout_width="171dp"
            android:layout_height="83dp"
            android:text="@string/page1_call000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Blue_Background"
            app:layout_constraintEnd_toEndOf="@+id/Blue_Background"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="@+id/Blue_Background"
            app:layout_constraintTop_toTopOf="@+id/Blue_Background"
            app:layout_constraintVertical_bias="0.19" />

        <ImageView
            android:id="@+id/White_Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Blue_Background"
            app:layout_constraintEnd_toEndOf="@+id/Blue_Background"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="@+id/Blue_Background"
            app:layout_constraintTop_toTopOf="@+id/Blue_Background"
            app:layout_constraintVertical_bias="0.826"
            app:srcCompat="@drawable/ellipse4" />

        <ImageView
            android:id="@+id/Call_picture"
            android:layout_width="31dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/White_Circle"
            app:layout_constraintEnd_toEndOf="@+id/White_Circle"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="@+id/White_Circle"
            app:layout_constraintTop_toTopOf="@+id/White_Circle"
            app:layout_constraintVertical_bias="0.684"
            app:srcCompat="@drawable/call" />

        <ImageView
            android:id="@+id/Flood_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/Blue_Background"
            app:layout_constraintEnd_toEndOf="@+id/Blue_Background"
            app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintStart_toStartOf="@+id/Blue_Background"
            app:layout_constraintTop_toTopOf="@+id/Blue_Background"
            app:layout_constraintVertical_bias="0.322"
            app:srcCompat="@drawable/image1" />

        <TextView
            android:id="@+id/Alert_Notification_text"
            android:layout_width="131dp"
            android:layout_height="51dp"
            android:text="@string/alert_notification"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Alert_Notification"
            app:layout_constraintEnd_toEndOf="@+id/Alert_Notification"
            app:layout_constraintHorizontal_bias="0.441"
            app:layout_constraintStart_toStartOf="@+id/Alert_Notification"
            app:layout_constraintTop_toTopOf="@+id/Alert_Notification"
            app:layout_constraintVertical_bias="0.803" />

        <TextView
            android:id="@+id/Survival_Tips_text"
            android:layout_width="98dp"
            android:layout_height="55dp"
            android:text="@string/survival_tips"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Survival_Tips"
            app:layout_constraintEnd_toEndOf="@+id/Survival_Tips"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintStart_toStartOf="@+id/Survival_Tips"
            app:layout_constraintTop_toTopOf="@+id/Survival_Tips"
            app:layout_constraintVertical_bias="0.805" />

        <TextView
            android:id="@+id/Emergency_Contact_text"
            android:layout_width="98dp"
            android:layout_height="55dp"
            android:text="@string/emergency_contact"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Emergency_Contact"
            app:layout_constraintEnd_toEndOf="@+id/Emergency_Contact"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintStart_toStartOf="@+id/Emergency_Contact"
            app:layout_constraintTop_toTopOf="@+id/Emergency_Contact"
            app:layout_constraintVertical_bias="0.805" />

        <TextView
            android:id="@+id/Flood_Sensor_Map_text"
            android:layout_width="98dp"
            android:layout_height="55dp"
            android:text="@string/flood_sensor_map"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Flood_Sensor_Map"
            app:layout_constraintEnd_toEndOf="@+id/Flood_Sensor_Map"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintStart_toStartOf="@+id/Flood_Sensor_Map"
            app:layout_constraintTop_toTopOf="@+id/Flood_Sensor_Map"
            app:layout_constraintVertical_bias="0.805" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BottomNavigationView 添加到底部 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"
        android:padding="0dp"
        android:layout_margin="0dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
